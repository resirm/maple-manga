<!DOCTYPE html>
<html>
  <head>
    <title>Maple Manga</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/common.css" rel="stylesheet" media="screen">
    <link rel="icon" href="./img/logo.jpg" />
    <!-- <base target="_blank"> -->
  </head>
  <body>
    <script type="text/javascript">
        function see(m_id) {
          $.ajax({
            method: 'post',
            url: '/seen',
            data: m_id,
          });
        }
    </script>
    <form action="/search" method="POST">
        <input type="text" name="search" class="form-control" placeholder="Search">
      <button type="submit" class="btn btn-default" style="display:none;">Submit</button>
    </form>
    <div class="imgBox">
      <div class="Sub_H2">
        <span class="Title">更新列表</span>
      </div>
      <h1>欢迎你 <%= usr %> </h1>
      <ul class="col_3_1">
        <% for (var manga in mangas) { %>
          <% if (mangas[manga].update === true ) { %>
            <span style="color: #ff0000;"><li class="list-comic"><a class="ImgA" onclick="see({m_id: '<%= mangas[manga].manga_id%>'})" href="/manga?id=<%= mangas[manga].url%>&c=<%= mangas[manga].cover_url%>&t=<%= mangas[manga].manga_name%>" target="_blank"><img src="<%= mangas[manga].cover_url%>" width="100%" alt="" default="images/default/cover.png"></a><a class="txtA" href="<%= mangas[manga].url%>" style="color: #ff0000;"><%= mangas[manga].manga_name+'（新！）'%></a><span class="info">更新了<a href="/comic/11/257032.html"> </a></span>
            </li>
            </span>
          <% } else { %>
            <li class="list-comic"><a class="ImgA" onclick="see({m_id: '<%= mangas[manga].manga_id%>'})" href="/manga?id=<%= mangas[manga].url%>&c=<%= mangas[manga].cover_url%>&t=<%= mangas[manga].manga_name%>" target="_blank"><img src="<%= mangas[manga].cover_url%>" width="100%" alt="" default="images/default/cover.png"></a><a class="txtA" href="<%= mangas[manga].url%>"><%= mangas[manga].manga_name%></a><span class="info">暂无更新<a href="/comic/11/257032.html"></a></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </div>

    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>

